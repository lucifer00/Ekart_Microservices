package com.ekart.cart.repository;

import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.PersistenceContext;

import org.springframework.data.jpa.repository.JpaRepository;

import com.ekart.cart.entity.Cart;
import com.ekart.cart.entity.CartId;

public interface CartRepository extends JpaRepository<Cart, CartId> {
	@PersistenceContext
	private EntityManager em;
	public List<Cart> findAllByIdUserId(String user_id){
		return em
                .createQuery("select o from MyEntity o where o.userId=:userId",
                        Cart.class).setParameter("userId", user_id).getResultList();
	}
}
